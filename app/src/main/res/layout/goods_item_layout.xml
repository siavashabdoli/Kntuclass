<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:layout_height="180dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_goods"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kalaye shomare 22"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/image_view_goods" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3c3c3c"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/goods_title"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#44aa44"
                android:text="20000"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="left"/>
            <TextView
                android:id="@+id/price_with_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16000"
                android:textColor="@color/red_my_app"
                app:layout_constraintBottom_toTopOf="@id/price"
                android:gravity="left"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>